CREATE DATABASE db1;
CREATE DATABASE db2;

CREATE USER 'my_app' IDENTIFIED BY 'xxxxxxxxxxxxx';

GRANT SELECT, INSERT, UPDATE, DELETE, CREATE, DROP, REFERENCES, ALTER ON `db1`.* TO 'my_app'      |
GRANT SELECT, INSERT, UPDATE, DELETE, CREATE, DROP, REFERENCES, ALTER ON `db2`.* TO 'my_app'        |

CREATE USER 'my_user' IDENTIFIED BY 'yyyyyyyyyyy';

GRANT SELECT ON db1.* TO 'felipebriz';
GRANT SELECT ON db2.* TO 'felipebriz';